<sbe:messageSchema xmlns:sbe="http://fixprotocol.io/2016/sbe"
                   package="io.skua.protocol"
                   id="688"
                   version="1"
                   semanticVersion="0.1"
                   description="Skua Protocol Messages"
                   byteOrder="littleEndian">
    <types>
        <composite name="messageHeader" description="Message identifiers and length of message root">
            <type name="blockLength" primitiveType="uint16"/>
            <type name="templateId" primitiveType="uint16"/>
            <type name="schemaId" primitiveType="uint16"/>
            <type name="version" primitiveType="uint16"/>
        </composite>
        <composite name="varStringEncoding">
            <type name="length" primitiveType="uint32" maxValue="2000"/>
            <type name="varData" primitiveType="uint8" length="0" characterEncoding="UTF-8"/>
        </composite>
        <composite name="groupSizeEncoding" description="Repeating group dimensions.">
            <type name="blockLength" primitiveType="uint16"/>
            <type name="numInGroup" primitiveType="uint16"/>
        </composite>
    </types>
    <types>
        <type name="Sequence" primitiveType="int64"/>
        <type name="Topic" primitiveType="char" length="15" characterEncoding="ASCII"/>
        <type name="ProducerId" primitiveType="int32"/>
        <type name="CorrelationId" primitiveType="int64"/>
        <type name="SessionId" primitiveType="int64"/>
        <type name="ClientId" primitiveType="int32"/>
        <type name="ApiVersion" primitiveType="int16"/>
        <type name="Boolean" primitiveType="int8"/>
    </types>
    <sbe:message name="SkuaDataHeader" id="1" description="Data Message Header">
        <field name="sequence" id="1" type="Sequence"/>
        <field name="producer" id="2" type="ProducerId"/>
        <field name="apiVersion" id="3" type="ApiVersion"/>
        <field name="headerLength" id="4" type="int16"/>
        <field name="flags" id="5" type="int8"/>
        <field name="topic" id="6" type="Topic"/>
    </sbe:message>
    <sbe:message name="SkuaProgressCommand" id="2" description="Client to Configuration Server Progress Info">
        <field name="clientId" id="1" type="ClientId"/>
        <field name="sessionId" id="2" type="SessionId"/>
        <!-- stats, clients connected by topic etc -->
    </sbe:message>
    <sbe:message name="RegisterNewSkuaSessionCommand" id="3" description="Register a client with a new session on a Skua Configuration Server">
        <field name="requestId" id="1" type="CorrelationId"/>
        <field name="clientId" id="2" type="ClientId"/>
        <field name="apiVersion" id="3" type="ApiVersion"/>
        <data name="hostAddress" id="4" type="varStringEncoding"/>
    </sbe:message>
    <sbe:message name="NewSkuaSessionRegisteredEvent" id="4" description="Skua Configuration Server response to a client RegisterNewSkuaSessionCommand">
        <field name="requestId" id="1" type="CorrelationId"/>
        <field name="sessionId" id="2" type="SessionId"/>
        <field name="success" id="3" type="Boolean"/>
    </sbe:message>
    <sbe:message name="RegisterAsTopicProducerCommand" id="5" description="Command used by clients to register as a topic producer">
        <field name="requestId" id="1" type="CorrelationId"/>
        <field name="producer" id="2" type="ProducerId"/>
        <field name="topic" id="3" type="Topic"/>
        <field name="apiVersion" id="4" type="ApiVersion"/>
        <field name="headerLength" id="5" type="int16"/>
        <field name="flags" id="6" type="int8"/>
    </sbe:message>
    <sbe:message name="RegisteredAsTopicProducerEvent" id="6" description="Skua Configuration Server response to RegisterAsTopicProducerCommand">
        <field name="requestId" id="1" type="CorrelationId"/>
        <field name="producer" id="2" type="ProducerId"/>
        <field name="lastSequenceForProducer" id="3" type="Sequence"/>
        <field name="success" id="4" type="Boolean"/>
    </sbe:message>
    <sbe:message name="ConsumeTopicCommand" id="7" description="Command used by clients to consume a topic">
        <field name="requestId" id="1" type="CorrelationId"/>
        <field name="topic" id="2" type="Topic"/>
    </sbe:message>
    <sbe:message name="ConsumeTopicAcceptedCommand" id="8" description="">
        <field name="requestId" id="1" type="CorrelationId"/>
        <field name="success" id="2" type="Boolean"/>
    </sbe:message>
    <sbe:message name="NewTopicConsumerRegisteredEvent" id="9" description="">
        <field name="requestId" id="1" type="CorrelationId"/>
        <field name="topic" id="2" type="Topic"/>
        <field name="port" id="3" type="int16"/>
        <field name="streamId" id="4" type="int16"/>
        <data name="hostAddress" id="5" type="varStringEncoding"/>
    </sbe:message>
    <sbe:message name="NewTopicConsumerRegistrationAcceptedCommand" id="10" description="">
        <field name="requestId" id="1" type="CorrelationId"/>
        <field name="success" id="2" type="Boolean"/>
    </sbe:message>
</sbe:messageSchema>
